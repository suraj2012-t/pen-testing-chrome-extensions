{
  "manifest_version": 3,
  "name": "Clear Cookies and Logout",
  "version": "1.0",
  "description": "Clears all browser cookies and attempts SSO logout.",
  "permissions": [
    "activeTab",
    "cookies",
    "tabs",
    "storage",
    "browsingData"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://*.capgemini.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
