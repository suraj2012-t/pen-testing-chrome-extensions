{
  "manifest_version": 3,
  "name": "Cookie Length Identifier & Editor",
  "version": "1.0",
  "description": "Displays total cookie length and allows manual update of cookies up to 128KB.",
  "permissions": [
    "cookies",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    }
  }
}
